{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "strict": true,
    "baseUrl": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "paths": {
      "@establishments/*": [
        "modules/establishments/*"
      ],
      "@protocols/*": [
        "modules/protocols/*"
      ],
      "@users/*": [
        "modules/users/*"
      ],
      "@notification/*": [
        "modules/notification/*"
      ],
      "@security/*": [
        "modules/security/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@docs/*": [
        "docs/*"
      ],
      "@errors/*": [
        "shared/errors/*"
      ],
      "@routes/*": [
        "shared/infra/http/routes/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/"
  ]
}
